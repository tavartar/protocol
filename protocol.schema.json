{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Protocol Definition Schema",
  "type": "object",
  "required": ["version", "namespaces"],
  "properties": {
    "version": {
      "type": "string"
    },
    "meta": {
      "type": "object",
      "additionalProperties": true
    },
    "namespaces": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["events"],
        "properties": {
          "description": {
            "type": "string"
          },
          "events": {
            "type": "object",
            "additionalProperties": {
              "type": "object",
              "required": ["direction", "payload"],
              "properties": {
                "direction": {
                  "type": "string",
                  "enum": [
                    "client→gateway",
                    "gateway→client",
                    "client→backend",
                    "backend→client",
                    "server→gateway",
                    "gateway→server",
                    "server→client",
                    "client→server"
                  ]
                },
                "phase": {
                  "type": "string"
                },
                "payload": {
                  "type": "object",
                  "additionalProperties": {
                    "anyOf": [
                      { "type": "string" },
                      { "type": "number" },
                      { "type": "boolean" },
                      { "type": "object" },
                      { "type": "array" }
                    ]
                  }
                },
                "description": {
                  "type": "string"
                }
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}

